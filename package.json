{
  "name": "vartex",
  "version": "1.0.0-beta0",
  "main": "dist/src/gateway",
  "repository": "git@github.com:ArweaveTeam/gateway.git",
  "author": "Arweave <hello@arweave.org>",
  "type": "module",
  "license": "MIT",
  "engines": {
    "node": ">=16"
  },
  "bin": {
    "vartex": "./cli/vartex.mjs"
  },
  "prettier": {
    "singleQuote": false,
    "doubleQuote": true
  },
  "execMap": {
    "ts": "node --loader ts-node/esm"
  },
  "exports": {
    ".": "./cli/vartex.mjs"
  },
  "scripts": {
    "test": "yarn run gql && TS_NODE_FILES=true node --experimental-vm-modules node_modules/jest/bin/jest.js --verbose false --ci --forceExit --runInBand --detectOpenHandles ./{src,test}/*",
    "lint": "eslint 'src/**/*.ts'",
    "gql": "node_modules/@graphql-codegen/cli/bin.js --config codegen.yml",
    "prestart": "yarn run gql && yarn run migrate:init",
    "start": "yarn run prestart && TS_NODE_FILES=true node --experimental-specifier-resolution=node --max-old-space-size=4096 --loader ts-node/esm.mjs src/gateway.ts",
    "start:gw-node": "yarn run gql && VARTEX_GW_NODE=1 TS_NODE_FILES=true node --experimental-specifier-resolution=node --max-old-space-size=4096 --loader ts-node/esm.mjs src/gateway.ts",
    "start:prod": "yarn run prestart && node start.cjs",
    "cache:purge": "rm -rf cache/imports",
    "migrate:init": "node cassandra/init.cjs",
    "migrate:nuke": "yarn run cache:purge && node cassandra/nuke.cjs"
  },
  "resolutions": {
    "cassandra-driver/long": "^4.0.0",
    "**/graphql": "16"
  },
  "dependencies": {
    "@ridi/cql-builder": "^1.0.4",
    "ansi-styles": "^6.1.0",
    "apollo-server-express": "^3.4.0",
    "arweave": "^1.10.18",
    "arweave-bundles": "^1.0.3",
    "base64-stream": "^1.0.0",
    "body-parser": "^1.19.0",
    "cassandra-driver": "^4.6.3",
    "colors": "^1.4.0",
    "commander": "^8.3.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "event-stream": "^4.0.1",
    "exit-hook": "^3.0.0",
    "express": "^5.0.0-alpha.8",
    "express-pg-session": "^1.1.0",
    "express-session": "^1.17.2",
    "fluture": "^14.0.0",
    "forever-monitor": "^3.0.3",
    "fs-jetpack": "^4.2.0",
    "gauge": "^3.0.1",
    "git-rev-sync": "^3.0.1",
    "got": "^11.8.2",
    "graceful-fs": "^4.2.8",
    "graphql": "16",
    "graphql-bigint": "^1.0.0",
    "graphql-fields": "^2.0.3",
    "graphql-playground-middleware-express": "^1.7.22",
    "js-sha256": "^0.9.0",
    "kill-port": "^1.6.1",
    "lodash": "^4.17.21",
    "mime-types": "^2.1.33",
    "mkdirp": "^1.0.4",
    "moment": "^2.29.1",
    "p-limit": "^4.0.0",
    "p-min-delay": "^4.0.1",
    "p-wait-for": "^4.1.0",
    "p-whilst": "^3.0.0",
    "rambda": "^6.9.0",
    "random-weighted-choice": "^0.1.4",
    "rfc4648": "^1.5.0",
    "rimraf": "^3.0.2",
    "shortid": "^2.2.16",
    "stream-chain": "^2.2.4",
    "stream-json": "^1.7.3",
    "ts-node": "^10.4.0",
    "winston": "^3.3.3",
    "zod": "^3.11.6"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.2.2",
    "@graphql-codegen/typescript": "2.3.0",
    "@graphql-codegen/typescript-resolvers": "2.4.0",
    "@types/event-stream": "^3.3.34",
    "@types/express": "^4.17.13",
    "@types/graphql-fields": "^1.3.4",
    "@types/jest": "^27.0.2",
    "@types/lodash": "^4.14.176",
    "@types/mime-types": "^2.1.1",
    "@types/mkdirp": "^1.0.2",
    "@types/mocha": "^9.0.0",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.6",
    "@types/node-cron": "^3.0.0",
    "@types/shortid": "^0.0.29",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-unicorn": "^37.0.1",
    "jest": "^27.3.1",
    "nock": "^13.1.4",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4",
    "yall-scripts": "^1.2.0"
  }
}
