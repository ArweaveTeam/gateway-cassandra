{
  "name": "@arweave/gateway",
  "version": "1.0.0",
  "main": "dist/zbsrc/Gateway.js",
  "repository": "git@github.com:ArweaveTeam/gateway.git",
  "author": "Arweave <hello@arweave.org>",
  "type": "module",
  "license": "MIT",
  "engines": {
    "node": ">=16"
  },
  "prettier": {
    "singleQuote": false,
    "doubleQuote": true
  },
  "execMap": {
    "ts": "node --loader ts-node/esm"
  },
  "exports": {
    ".": "./src"
  },
  "scripts": {
    "test": "yarn run gql && node --experimental-vm-modules node_modules/jest/bin/jest.js --verbose false --ci --forceExit --runInBand --detectOpenHandles test/*",
    "lint": "eslint src/**/*.ts",
    "gql": "node_modules/@graphql-codegen/cli/bin.js --config codegen.yml",
    "prestart": "yarn run gql && yarn run migrate:init",
    "start": "yarn run prestart && TS_NODE_FILES=true node --experimental-specifier-resolution=node --max-old-space-size=4096 --loader ts-node/esm.mjs src/Gateway.ts",
    "start:prod": "yarn run prestart && node start.cjs",
    "cache:purge": "rm -rf cache/imports",
    "migrate:init": "node cassandra/init.cjs",
    "migrate:nuke": "yarn run cache:purge && node cassandra/nuke.cjs"
  },
  "resolutions": {
    "cassandra-driver/long": "^4.0.0",
    "**/graphql": "15.x",
    "**/ts-node": "^10.2.1"
  },
  "dependencies": {
    "@ridi/cql-builder": "^1.0.4",
    "apollo-server-express": "^3.1.0-alpha.1",
    "arweave": "^1.10.16",
    "arweave-bundles": "^1.0.3",
    "base64-stream": "^1.0.0",
    "bip39": "^3.0.4",
    "body-parser": "^1.19.0",
    "cacache": "^15.2.0",
    "cassandra-driver": "^4.6.3",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "crypto-random-string": "^4.0.0",
    "detect-mocha": "^0.1.0",
    "dotenv": "^10.0.0",
    "event-stream": "^4.0.1",
    "exit-hook": "^2.2.1",
    "express": "^5.0.0-alpha.8",
    "express-pg-session": "^1.1.0",
    "express-session": "^1.17.2",
    "fluture": "^14.0.0",
    "forever-monitor": "^3.0.3",
    "fs-jetpack": "^4.1.0",
    "gatsby-worker": "^0.3.0",
    "gauge": "^3.0.0",
    "git-rev-sync": "^3.0.1",
    "got": "^11.8.2",
    "graphql": "15.x",
    "graphql-fields": "^2.0.3",
    "graphql-playground-middleware-express": "^1.7.22",
    "js-sha256": "^0.9.0",
    "kill-port": "^1.6.1",
    "koi-logs": "https://github.com/koii-network/logs.git",
    "lodash": "^4.17.21",
    "mime-types": "^2.1.31",
    "mkdirp": "^1.0.4",
    "moment": "^2.29.1",
    "node-cron": "^3.0.0",
    "p-wait-for": "^4.1.0",
    "rambda": "^6.8.2",
    "random-weighted-choice": "^0.1.4",
    "rfc4648": "^1.5.0",
    "rimraf": "^3.0.2",
    "shortid": "^2.2.16",
    "threads": "^1.6.5",
    "ts-node": "^10.2.1",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.0.1",
    "@graphql-codegen/typescript": "1.23.1-alpha-428c427d0.0",
    "@graphql-codegen/typescript-resolvers": "1.20.1-alpha-428c427d0.0",
    "@types/event-stream": "^3.3.34",
    "@types/express": "^4.17.13",
    "@types/graphql-fields": "^1.3.4",
    "@types/jest": "^26.0.24",
    "@types/lodash": "^4.14.171",
    "@types/mime-types": "^2.1.0",
    "@types/mocha": "^9.0.0",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.4.2",
    "@types/node-cron": "^2.0.4",
    "@types/shortid": "^0.0.29",
    "@typescript-eslint/eslint-plugin": "^4.28.5-alpha.0",
    "@typescript-eslint/parser": "^4.28.5-alpha.0",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-unicorn": "^35.0.0",
    "jest": "^27.0.6",
    "nock": "^13.1.1",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.0-dev.20210724",
    "yall-scripts": "^1.2.0"
  }
}
